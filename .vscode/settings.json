{
  "eslint.format.enable": true,
  "eslint.run": "onSave",
  "eslint.validate": ["vue","html","javascript","typescript"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.exclude": {
    ".ackrc": true,
    ".dockerignore": true,
    ".drone.yml": true,
    ".eslintcache": true,
    ".eslintignore": false,
    ".eslintrc.js": false,
    ".nuxt*": true,
    ".nyc_output": true,
    "assets": false,
    "babel.config.js": false,
    "charts": false,
    "extensions": false,
    "jsconfig.json": true,
    "LICENSE": true,
    "pkg/**/.shell": true,
    "pkg/**/node_modules": true,
    "yarn-error.log": true,
    "CODEOWNERS": true
  },
  "search.exclude": {
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "cSpell.words": [
    "kubewarden"
  ]
}
